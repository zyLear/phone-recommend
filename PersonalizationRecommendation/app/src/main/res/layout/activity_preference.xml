<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.personalizationrecommendation.Preference">

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:elevation="0dp" />

    <TextView
        android:text="偏好设置"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="60dp"
        android:id="@+id/t10"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />



    <TextView
        android:text="品牌"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_marginStart="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="80dp"
        android:id="@+id/t1"
        android:textAlignment="center"
        />

    <TextView
        android:text="价格"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_alignStart="@+id/t1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="10dp"
        android:id="@+id/t2"
        android:textAlignment="center"
        />

    <TextView
        android:text="尺寸"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:layout_alignStart="@+id/t1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="10dp"
        android:id="@+id/t3"
        android:textAlignment="center"
        />

    <TextView
        android:text="运行内存"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="10dp"
        android:id="@+id/t4"
        android:layout_below="@+id/t3"
        android:layout_alignStart="@+id/t1"
        android:textAlignment="center"
        />

    <TextView
        android:text="像素"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t4"
        android:layout_alignStart="@+id/t1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="10dp"
        android:id="@+id/t5"
        android:textAlignment="center"
        />

    <TextView
        android:text="存储空间"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t5"
        android:layout_alignStart="@+id/t1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="10dp"
        android:id="@+id/t6"
        android:textAlignment="center"
        />

    <TextView
        android:text="CPU"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t6"
        android:layout_alignStart="@+id/t1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="10dp"
        android:id="@+id/t7"
        android:textAlignment="center"
        />




    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t1"
        android:layout_toEndOf="@+id/t1"
        android:id="@+id/brand"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t2"
        android:layout_toEndOf="@+id/t2"
        android:id="@+id/price"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t3"
        android:layout_toEndOf="@+id/t3"
        android:id="@+id/size"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t4"
        android:layout_toEndOf="@+id/t4"
        android:id="@+id/ram"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t5"
        android:layout_toEndOf="@+id/t5"
        android:id="@+id/pixel"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t6"
        android:layout_toEndOf="@+id/t6"
        android:id="@+id/rom"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t7"
        android:layout_toEndOf="@+id/t7"
        android:id="@+id/cpu"
        android:max="99"
        android:progress="49"
        android:thumb="?android:attr/textSelectHandle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="保存"
        android:background="@android:color/holo_orange_light"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:id="@+id/savePrefenrence"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button"
        android:textStyle="normal|bold" />


</RelativeLayout>
